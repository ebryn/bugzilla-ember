<table cellspacing="0" cellpadding="4" width="100%" class="browse-table">
  <thead> 
    <tr>
      {{view 'browse-column-header' column="id" title="ID"}}
      {{view 'browse-column-header' column="product" title="Product"}}
      {{view 'browse-column-header' column="component" title="Comp"}}
      {{view 'browse-column-header' column="assigned_to.name" title="Assignee"}}
      {{view 'browse-column-header' column="status" title="Status"}}
      {{view 'browse-column-header' column="summary" title="Summary"}}
      {{view 'browse-column-header' column="last_change_time" title="Changed"}}
    </tr>
  </thead>
  <tbody>
    {{select contentBinding="products" prompt="[Product]" selectionBinding="selectedProduct" optionLabelPath="content.name" optionValuePath="content.id"}}
    {{select contentBinding="components" prompt="[Component]" selectionBinding="selectedComponent" optionLabelPath="content.name" optionValuePath="content.id"}}
    {{#each controller}}
    <tr>
      <td class="id">
        {{#linkTo 'bug' this}} {{id}} {{/linkTo}}
      </td>
      <td class="product">
        {{product}}
      </td>
      <td class="component">
        {{component}}
      </td>
      <td class="assignee">
        {{assigned_to.name}}
      </td>
      <td class="status">
        {{status}}
      </td>
      <td class="summary">
        {{#linkTo 'bug' this}} {{summary}} {{/linkTo}}
      </td>
      <td class="changed">
        {{last_change_time}}
      </td>
    </tr>
    {{/each}}

  </tbody>

  <tfoot></tfoot></table>
